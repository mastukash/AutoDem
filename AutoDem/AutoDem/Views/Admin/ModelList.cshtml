@model AutoDem.Controllers.AdminModelListViewModel

@{
    ViewBag.Title = "Autos List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    function changeName(idModel) {
        var nameBrand = $("#n" + idModel).val();
        $.post('@Url.Action("ChangeBrandName", "Admin")', { id: idModel, name: nameBrand }, function (data) {
            if (data.Success) {
                //location.reload();
            }
        });
    }
    </script>

<div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <!-- Default datatable inside panel -->
            
            <div class="panel panel-default">
                <div class="panel-heading"><h6 class="panel-title">Марки автомобілів</h6></div>
                <div class="datatable">
                    <input class="btn btn-primary" data-toggle="modal" data-target="#AddBrandModal" data-whatever="@@mdo" id="AddBrand" type="button" value="Добавити марку" style="margin:10px 10px;" />
                    <!-- Modal -->
                    <div class="modal fade" id="AddBrandModal" tabindex="-1" role="dialog" aria-labelledby="AddBrandLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="AddBrandLabel">Нова марка автомобіля</h5>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="message-text" class="col-form-label" >Введіть назву марки:</label>
                                            <textarea class="form-control" id="message-text"></textarea>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Відмінити</button>
                                    <button type="button" class="btn btn-primary" id="createBrand">Зберегти</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:5%">#</th>
                                <th style="width:32.5%">Модель</th>
                                <th style="width:32.5%">Марка</th>
                                <th style="width:10%"></th>
                                <th style="width:10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.Models)
            {

                <tr>
                    <td>@i.IdModel</td>
                    <td>@Html.EditorFor(m => i.Name, null, "n" + i.IdModel)</td> 
                   <td>@Html.DropDownListFor(n => n.Brands, new SelectList(Model.Brands, i.BrandPosition))</td>
                    <td><input class="btn btn-info" id="@("s"+i.IdModel)" type="button" value="Зберегти" onclick="changeName(@i.IdModel)"/></td>
                    <td><input data-toggle="confirmation" class="btn btn-danger" data-placement="left" id="@("d"+i.IdModel)" type="button"  value="Delete" /></td>
                </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /default datatable inside panel -->

        </div>

    </div>
</div>
<script>
    $("#createBrand").click(function (e) {
        $.post('@Url.Action("AddBrand", "Admin")', {
            name: $("#message-text").first().val()
        },
            function (data) {
                if (data.Success) {
                    location.reload();
                }
                else {
                    $("#message-text").first().val(data.error);
                }
            });
    });

     $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]',
        onConfirm: function () {
            $.post('@Url.Action("DeleteBrand", "Admin")', { id: $(this).attr("id") } , function (data) {
                if (data.Success) {
                    location.reload();
            }
        });
        },
        // other options
    });
    </script>
