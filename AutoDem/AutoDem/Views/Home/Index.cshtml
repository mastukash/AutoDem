        @for (int i = 0; i < Model.Services.Count; i++)
        {
            if (i % 2 == 0)
            {
                @:<div class="flex-section gtco-gray-bg">
                }
                else
                {
                @:<div class="flex-section reverse">
                    }
            <div class="col-1">
                <div class="text">
                    <div class="row row-pb-sm">
                        <div class="col-md-12">
                            <h2>@Model.Services[i].Title</h2>
                            <p>@Model.Services[i].Body</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="check-li">
                                @for (int j = 0; j < @Model.Services[i].Details.Count / 2; j++)
                                {
                                    <li>@Model.Services[i].Details[j]</li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="check-li">
                                @for (int j = @Model.Services[i].Details.Count / 2; j < @Model.Services[i].Details.Count; j++)
                                {
                                    <li>@Model.Services[i].Details[j]</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            string url = "/images/img_" + (i + 1) + ".jpg";
            @:<div class="col-2 flex-img" style="background-image: url(@url);"></div>
