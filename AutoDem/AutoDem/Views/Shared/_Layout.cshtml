<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/index")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="page-inner">
        <div id="head-top" style="position: absolute; width: 100%; top: 0;  ">
            <div class="gtco-top">
                <div class="container-fluid">
                    <div class="row" style="margin-right:0">
                        <div class="col-md-6 col-xs-6">
                            <div id="gtco-logo">@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
                        </div>
                        <div class="col-md-6 col-xs-6 social-icons">
                            <ul class="gtco-social-top">
                                <li><a href="https://www.facebook.com/100017193852456"><i class="icon-facebook"></i></a></li>
                                <li><a href="https://www.instagram.com/vadim_demian"><i class="icon-instagram"></i></a></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <nav class="gtco-nav sticky-banner" role="navigation">
                <div class="gtco-container">

                    <div class="row">
                        <div class="col-xs-12 text-center menu-1">
                            <ul>
                                <li class="active">@Html.ActionLink("Головна", "Index", "Home")</li>
                                <li>@Html.ActionLink("Автомобілі", "Index", "Autos")</li>
                                <li>@Html.ActionLink("Послуги", "Services", "Home")</li>
                                <li>@Html.ActionLink("Контакти", "Contact", "Home")</li>
                            </ul>
                            @*@Html.Partial("_LoginPartial")*@
                        </div>
                    </div>

                </div>
            </nav>
        </div>
        <div class="container-fluid @*body-content*@" style="padding-right:0; padding-left:0;">
            @RenderBody()
            @*<hr />*@
            <footer id="gtco-footer" role="contentinfo">
                <div class="gtco-container">
                    <div class="row row-p	b-md">
                        <div class="col-md-4">
                            <div class="gtco-widget">
                                <h3>About Us</h3>
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempore eos molestias quod sint ipsum possimus temporibus officia iste perspiciatis consectetur in fugiat.</p>
                                <p><a href="#">Learn more...</a></p>
                            </div>
                        </div>
                        <div class="col-md-4 col-md-push-1">
                            <div class="gtco-widget">
                                <h3>Послуги</h3>
                                @{
        var viewModel = ViewBag.MainLayoutViewModel;
                                }
                                <ul class="gtco-footer-links">
                                    @for (int i = 0; i < viewModel.Count; i++)
        {
                            <li><a href="#">@viewModel[i]</a></li>
}
                                </ul>
                            </div>
                        </div>

                        <div class="col-md-3 col-md-push-1">
                            <div class="gtco-widget">
                                <h3>Контакти:</h3>
                                <ul class="gtco-quick-contact">
                                    <li><a href="#"><i class="icon-phone"></i> +38 067 747 67 76</a></li>
                                    <li><a href="#"><i class="icon-phone"></i> +38 063 158 11 15</a></li>
                                    <li><a href="#"><i class="icon-phone"></i> +49 157 8808 9230</a></li>
                                    <li><a href="#"><i class="icon-mail2"></i> m-demjan@ukr.net</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row copyright">
                        <div class="col-md-12">
                            <p class="pull-left">
                                <small class="block">© @DateTime.Now.Year. All Rights Reserved.</small>
                                <small class="block">Designed by BrilliantBrains</small>
                            </p>
                            <p class="pull-right">
                                <ul class="gtco-social-icons pull-right">
                                    <li><a href="https://www.facebook.com/100017193852456"><i class="icon-facebook"></i></a></li>
                                    <li><a href="https://www.instagram.com/vadim_demian"><i class="icon-instagram"></i></a></li>
                                </ul>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

</body>
</html>

@RenderSection("scripts", required: false)